<div class ='row'>
  <h1><%= @user.name %>'s To Do List</h1>
</div>

<!-- Render partial for Form to add a ToDo -->
<%= render partial: 'todos/form', locals: { list: @list, todo: @todo } %>

<div class ='row'>
  <h4><div class='row header'>
    <div class='col-md-6'>To Do</div>
    <div class='col-md-2'>Time Left</div>
    <div class='col-md-2'>Completed?</div>
  </div></h4>
</div>

<!-- List of todos already entered -->
<%= render partial: 'todos/todo', collection: @todos %>